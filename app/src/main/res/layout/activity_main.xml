<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="15"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">

        <LinearLayout
            android:id="@+id/am_fragment_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        >
        <com.example.newsappbykotlin.dyi.IconWithTextview
        android:id="@+id/am_home_iwt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        iwt:icon="@drawable/home"
        iwt:text="首页"
        iwt:color="@color/black"
        iwt:text_size="15sp"
        tools:ignore="NestedWeights" />
        <com.example.newsappbykotlin.dyi.IconWithTextview
            android:id="@+id/am_titles_iwt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            iwt:icon="@drawable/list"
            iwt:text="频道"
            iwt:color="@color/black"
            iwt:text_size="15sp"
            tools:ignore="NestedWeights" />
        <com.example.newsappbykotlin.dyi.IconWithTextview
            android:id="@+id/am_search_iwt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            iwt:icon="@drawable/search"
            iwt:text="搜索"
            iwt:color="@color/black"
            iwt:text_size="15sp"
            tools:ignore="NestedWeights" />
    </LinearLayout>




</LinearLayout>